<!DOCTYPE html>
<html>
<head>
    <% include partials/head %>
    <style>
        .dflex{
            flex: 1;    
        }
    </style>
</head>
<body>
    <% include partials/nav %>
    <main>
        <div class="container">
            <div class="row">
                <div class="col s12 m8">
                    <form action="/search/" method="POST">
                        <input type="text" name="cityname" placeholder="Enter City Name">
                        <button class="btn" type="submit">Enter</button>
                    </form>
                </div>
            </div>
            
            <div class="row">
                <% if(searchedBars) {%>
                    <% searchedBars.forEach((bar) => { %>
                        <div class="col s12 m6 l4 dflex">
                                <div class="card blue-grey darken-1">
                                        <div class="card-content white-text">
                                            <span class="h3 card-title"><%= bar["name"] %></span>
                                            <a href="search/going/<%=bar["id"]%>"><span>Going: <%= bar["usersAttending"].length%></span></a>
                                            <p><%= bar["formatted_address"] %></p>
                                            <% let rating = +(bar["rating"]) %>
                                            <% rating  = Math.floor(rating)%>
                                            <% for (let i = 0; i < rating; i++) {%>
                                                <i class="material-icons amber-text">local_bar</i>
                                            <% } %>
                                        </div>
                                    </div>
                        </div>
                        
                    <% }) %>
                    <% } %>
            </div>
        </div>
        
    </main>
    
    <% include partials/foot-css %>
    <% include partials/foot %> 
    <script>
        $(function() {
	     $('.dflex').matchHeight();
        });
    </script>
</body>
</html>